#include <stdio.h>

int main() {
    int rows;
    char c;
    
    printf("Enter the number of rows: ");
    scanf("%d", &rows);
    
    // loop through rows
    for (int i = 1; i <= rows; i++) {
        c = 'A';
        
        // loop through columns
        for (int j = 1; j <= i; j++) {
            printf("%c ", c++);
        }
        
        printf("\n");
    }
    
    return 0;
}
